{
  "name": "wanderer-cycle",
  "private": true,
  "scripts": {
    "build": "pnpm recursive run build",
    "dev": "mprocs",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:contracts": "pnpm --filter 'contracts' dev",
    "dev-verbose": "mprocs 'pnpm dev-verbose:anvil' 'pnpm dev-verbose:contracts' 'pnpm dev-verbose:client'",
    "dev-verbose:anvil": "anvil --block-time=2 --block-base-fee-per-gas=0",
    "dev-verbose:client": "pnpm dev:client",
    "dev-verbose:contracts": "pnpm --filter 'contracts' dev-verbose",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
    "mud:up": "pnpm mud set-version --tag main && pnpm install",
    "prepare": "husky install && (forge --version || pnpm foundry:up)",
    "test": "pnpm recursive run test"
  },
  "devDependencies": {
    "@latticexyz/cli": "2.2.22-f0c0b982573f9953e1c726c0bef91671efaaa545",
    "@latticexyz/common": "2.2.22-f0c0b982573f9953e1c726c0bef91671efaaa545",
    "@types/debug": "4.1.7",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "8.28.0",
    "debug": "^4.3.4",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "mprocs": "^0.7.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "5.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md,sol}": "prettier --write"
  },
  "engines": {
    "node": "^20",
    "pnpm": "^10"
  }
}
